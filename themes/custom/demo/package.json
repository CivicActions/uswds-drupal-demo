{
  "name": "uswds-demo",
  "version": "1.0.0",
  "scripts": {
    "prebuild:css": "node-sass --include-path scss sass/uswds.scss assets/css/uswds.css",
    "build:css": "postcss --use autoprefixer -b 'last 2 versions' < assets/css/uswds.css | postcss --use cssnano --map -o assets/css/uswds.min.css",
    "build": "npm run build:css",
    "build:watch": "watch 'npm run build' sass"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.5",
    "cssnano": "^4.1.10",
    "node-sass": "^4.12.0",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.3",
    "uswds": "^2.6.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "gulp": "^4.0.0",
    "gulp-cli": "^2.2.0",
    "gulp-notify": "^3.2.0",
    "gulp-postcss": "^8.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "postcss-csso": "^4.0.0",
    "sass": "^1.26.3",
    "uswds-gulp": "github:uswds/uswds-gulp"
  }
}
